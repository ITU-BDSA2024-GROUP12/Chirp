@page "/{pageNumber:int?}"
@using System.Security.Claims
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="cheepbox">
            <h3>What's on your mind @(User.FindFirstValue("UserName"))?</h3>
            <form method="post">
                <input style="float: left" type="text" name="Cheep">
                <input type="submit" value="Share">
            </form>
        </div>
    }
    @if (!ModelState.IsValid)
    {
        @foreach (var error in ModelState["Cheep"].Errors)
        {
            <p>@error.ErrorMessage</p>
        }
    }
    @if (Model.Cheeps.Any())
    {
        <p>Showing @Model.Cheeps.Count() cheeps!</p>
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Text
                        <small>- @cheep.DateTime()</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

</div>
