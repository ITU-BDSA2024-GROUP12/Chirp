@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using Chirp.Infrastructure.Data
@inject SignInManager<ChirpUser> SignInManager
@inject UserManager<ChirpUser> UserManager
<div class=navigation>
    @if (User.Identity.IsAuthenticated)
    {
        <div>
            <a href="/@(User.FindFirstValue(ClaimTypes.Name))">my timeline</a> |
            <a href="/">public timeline</a> |
            <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">logout [@(User.FindFirstValue(ClaimTypes.Name))]</a>
        </div>
    }
    else
    {
        <div>
            <a href="/">public timeline</a> |
            <a asp-area="Identity" asp-page="/Account/Register">register</a> | 
            <a asp-area="Identity" asp-page="/Account/Login">login</a>
        </div>
    }
</div>